{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "prestart:dev": "clear",
    "start:dev": "clear && ts-node-dev ./src/main.ts",
    "prestart": "yarn build",
    "start": "node ./dist",
    "test": "jest",
    "test:features": "cucumber-js --exit",
    "test:features-reports": "cucumber-js --format html:reports/cucumber-report.html --exit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.2",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.12.0",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/supertest": "^2.0.11",
    "jest": "^27.4.7",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/$1"
    },
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "../jest.setup.ts"
    ]
  }
}
